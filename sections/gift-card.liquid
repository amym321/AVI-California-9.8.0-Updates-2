{% assign formatted_initial_value = gift_card.initial_value | money_without_trailing_zeros: gift_card.currency %}
<div class="content">
  <h2>{{ 'gift_cards.issued.subtext' | t }}</h2>

  {% unless gift_card.enabled %}
    <h4 class="alert">{{ 'gift_cards.issued.disabled' | t }}</h4>
  {% endunless %}
  {% assign gift_card_expiry_date = gift_card.expires_on | date: format: 'day_month_and_year' %}
  {% if gift_card.expired and gift_card.enabled %}
     <h4 class="alert">{{ 'gift_cards.issued.expired' | t: expiry: gift_card_expiry_date }}</h4>
  {% endif %}
  {% if gift_card.expired != true and gift_card.expires_on and gift_card.enabled %}
    <h4>{{ 'gift_cards.issued.active' | t: expiry: gift_card_expiry_date }}</h4>
  {% endif %}

  <div id="gift-card" class="{% if gift_card.expired %}expired{% endif %} {% unless gift_card.enabled %}disabled{% endunless %}">
    {% if section.settings.image != blank %}
      <picture>
        {% assign dimensions = "180,370,590,740,900,1080,1296,1512,1728" | split: "," %}
        <source srcset=
          "{% for dimension in dimensions %}
            {% assign img_url = dimension | append: 'x' %}
            {{ section.settings.image | img_url: img_url }} {{ dimension }}w,
          {% endfor %}"
          sizes="100vw"
        >
        <img class="card" src="{{ section.settings.image | img_url: '2048x' }}" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" style="width: 100%; height: auto;">
      </picture>
    {% else %}
      <img class="card" src="{{ 'gift-card/card.jpg' | shopify_asset_url }}" width="848" height="565" style="width: 100%; height: auto;"/>
    {% endif %}

    <div id="gift-card-amount">
      {% if gift_card.balance != gift_card.initial_value %}
        <span class="tooltip-container">
          {% assign balance = gift_card.balance | money %}
          <span class="tooltip-label">{{ 'gift_cards.issued.amount_left_html' | t: amount: balance }}</span>
          <span class="tooltip-triangle"></span>
        </span>
      {% endif %}
      <strong>{{ formatted_initial_value }}</strong>
    </div>

    <div id="gift-card-code-outer" onclick="selectText('GiftCardDigits');">
      <div id="gift-card-code-inner">
        <strong id="GiftCardDigits">{{ gift_card.code | format_code }}</strong>
      </div>
    </div>
  </div>

  <div class="row">
    <h3>{{ 'gift_cards.issued.redeem' | t }}</h3>
    <h3 class="shop-url">{{ shop.url }}</h3>
  </div>

  <div class="row">
    {% render 'qr' with giftcard as giftcard %}
  </div>

  <div class="row shop-button">
    <a href="{{ shop.url }}" class="btn action small" target="_blank">{{ 'gift_cards.issued.shop_link' | t }}</a>
  </div>
  <div class="row shop-button">
    {% if gift_card.pass_url %}
      <a href="{{ gift_card.pass_url }}" class="apple-wallet">
        <img id="apple-wallet-badge" src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" width="120" height="40" alt="{{ 'gift_cards.issued.add_apple_wallet' | t }}">
      </a>
    {% endif %}
    <a href="#" class="btn small print" onclick="window.print();">
      <i class="fc fc-print fc-lg"></i> {{ 'gift_cards.issued.print' | t }}
    </a>
  </div>
</div>

<script type="text/javascript">
  /*============================================================================
    Auto-select gift card code on click, based on ID passed to the function
      - Use a different method depending on IE or others
  ==============================================================================*/
  function selectText(element) {
    var doc = document,
        text = doc.getElementById(element);

    if (doc.body.createTextRange) { // ms
      var range = doc.body.createTextRange();
      range.moveToElementText(text);
      range.select();
    } else if (window.getSelection) { // moz, opera, webkit
      var selection = window.getSelection(),
          range = doc.createRange();
      range.selectNodeContents(text);
      selection.removeAllRanges();
      selection.addRange(range);
    }
  }
</script>

{% schema %}
{
  "name": {
    "en": "Gift card",
    "es": "Tarjeta regalo"
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": {
        "en": "Image",
        "es": "Imagen"
      }
    }
  ]
}
{% endschema %}
{% assign columns = section.settings.columns | times: 1 %}
{% assign rows = section.settings.rows | times: 1 %}
{% assign limit = columns | times: rows %}

<div class="content {% render 'content-classes', scope: section %}" data-section-id="{{ section.id }}" data-section-type="collection">
  {% paginate collection.products by limit %}
    {% render 'collection', products: collection.products, paginate: paginate %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "t:sections.main-collection.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.main-collection.settings.header.banner"
    },
    {
      "type": "paragraph",
      "content": "t:sections.main-collection.settings.paragraph.content"
    },
    {
      "id": "show_collection_image",
      "type": "checkbox",
      "default": false,
      "label": "t:sections.main-collection.settings.show_collection_image.label",
      "info": "t:sections.main-collection.settings.show_collection_image.info"
    },
    {
      "id": "show_collection_description",
      "type": "checkbox",
      "default": true,
      "label": "t:sections.main-collection.settings.show_collection_description.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection.settings.header.filtering_and_sorting"
    },
    {
      "id": "enable_filtering",
      "type": "checkbox",
      "label": "t:sections.main-collection.settings.enable_filtering.label",
      "default": false,
      "info": "t:sections.main-collection.settings.enable_filtering.info"
    },
    {
      "id": "enable_sorting",
      "type": "checkbox",
      "label": "t:sections.main-collection.settings.enable_sorting.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_labels",
      "label": {
        "en": "Show filter and sort labels",
        "es": "Mostrar etiquetas de filtro y orden"
      },
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.main-collection.settings.header.product_grid"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": {
        "en": "Products per row",
        "es": "Productos por fila"
      },
      "default": 4
    },
    {
      "type": "range",
      "id": "rows",
      "min": 3,
      "max": 20,
      "step": 1,
      "label": {
        "en": "Rows per page",
        "es": "Filas por p√°gina"
      },
      "default": 4
    },
    {
      "type": "header",
      "content": "t:sections.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "t:sections.settings.show_background.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "expanded",
      "label": "t:sections.settings.expanded.label",
      "default": true
    }
  ]
}
{% endschema %}
<div class="content logo-list {% render 'content-classes', scope: section %}">
  <div class="inner">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title | escape }}</h2>
    {% endif %}
    <div class="flex-row">
      {% for block in section.blocks %}
        <div class="logo">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
          {% endif %}
          {% if block.settings.image %}
            {% render 'resp-img',
             image: block.settings.image,
             alt: block.settings.image.alt,
             default_size: "100x",
             sizes: "100px",
             itemprop: "image"
            %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg with-border' }}
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>


<div class="content faq {% render 'content-classes', scope: section %}" data-section-id="{{ section.id }}" data-section-type="faq">
  <div class="inner with-layout-options centered"  style="max-width: {{ section.settings.max_width }}px;">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="titles">
        {% if section.settings.title != blank %}
          <h2 class="section-title">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <div class="rte">
            {{ section.settings.subtitle }}
          </div>
        {% endif %}
      </div>
    {% endif %}
    {% for block in section.blocks limit: section.blocks.size %}
      <div class="accordion {{ settings.content_alignment }}" {{ block.shopify_attributes }}>
        <details>
          <summary>
            <div class="header">
              {% render 'icon-accordion', icon: block.settings.icon %}
              <h3>
                {{ block.settings.heading | default: block.settings.page.title }}
              </h3>
            </div>
            <div class="arrow">
              <i class="fc fc-angle-down fc-lg"></i>
            </div>
          </summary>
          <div class="rte">
            {% if block.settings.page.content %}
              {{ block.settings.page.content }}
            {% else %}
              {{ block.settings.content }}
            {% endif %}
          </div>
        </details>
      </div>
    {% endfor %}
  </div>
</div>


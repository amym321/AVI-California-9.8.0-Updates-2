<div class="content blog {% render 'content-classes', scope: section %}">
  <div class="inner with-layout-options {{ settings.content_layout }}">
    {% render 'blog' %}
    <div class="article">
      {% liquid
        render 'post'
        render 'article-nav'
        render 'article-comment'
        render 'article-related'
      %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": {
    "en": "Article",
    "es": "Artículo"
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "facebook_sharing_articles",
      "label": {
        "en": "Enable Facebook sharing",
        "es": "Permitir compartir en Facebook"
      },
      "default": true
    },
    {
      "type": "checkbox",
      "id": "twitter_sharing_articles",
      "label": {
        "en": "Enable Twitter sharing",
        "es": "Permitir compartir en Twitter"
      },
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pinterest_sharing_articles",
      "label": {
        "en": "Enable Pinterest sharing",
        "es": "Permitir compartir en Pinterest"
      },
      "info": {
        "en": "Blog post will need to have a featured image.",
        "es": "El artículo del blog deberá tener una imagen destacada."
      },
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "t:sections.settings.show_background.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "expanded",
      "label": "t:sections.settings.expanded.label",
      "default": true
    }
  ]
}
{% endschema %}